<%- include(`${ejsPath}components/input_group`, {
    group: { id:'password_group', input:'password_input'},
    input: { id:'password', type:'password', req:true},
    label: { id:'password_label', content:'Escriba su nueva contraseña'},
    validation: {
        regex:/^(?=.*\d).{8,}$/i,
        error_message:'Debe tener un mínimo de 8 carácteres y al menos un número.'
    }
}); %>

<%- include(`${ejsPath}components/input_group`, {
    group: { id:'re-password_group', input:'re-password_input'},
    input: { id:'re-password', type:'password', req:true},
    label: { id:'re-password_label', content:'Re-escriba su nueva contraseña'},
    validation: {
        regex:/^(?=.*\d).{8,}$/i,
        error_message:'Las contraseñas deben coincidir.'
    }
}); %>

<div id="button_group" class="flexRow vp">

    <%- include(`${ejsPath}components/button`, {
        btn: { id:'confirm', type:'submit', classes:''},
        content: { name:'Confirmar Cambio', icon:''}
    }); %>
</div>