<%- include('components/input_group', {
    group_id,
    input,
    label_id,
    label: `${ label } (año-mes-día)`
}); %>

<script>
    ((d) => {
        d.addEventListener('DOMContentLoaded', () => {
            flatpickr('#<%= input.id %>', {
                dateFormat: 'Y-m-d',
                maxDate: new Date().fp_incr((-18*365)-5),
                altFormat: 'd-m-Y',
                allowInput: false,
                clickOpens: true
            });
        })
    })(document);
</script>